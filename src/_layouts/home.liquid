<!doctype html>
<html lang="{{ site.locale }}" class="layout-default layout-default--home">
  <head>
    {% render "head", metadata: site.metadata, title: resource.data.title %}

    <link rel="stylesheet" href="{% asset_path stylesheets/application.scss %}" type="text/css"/>
    <script src="{% asset_path javascript/application.js %}" defer></script>
    
    {% if bridgetown.environment == "production" %}
      {% render "analytics" %}
    {% endif %}

    {% live_reload_dev_js %}
  </head>
  <body class="{{ resource.data.page_class }}">
    <div hidden>
      {% render "icon_sprite" %}
    </div>

    {% render "header", menu_items: site.data.menu.header, social_platforms: site.data.social_platforms %}

    <div class="app-hero">
      <div class="container">
        <small class="app-hero__subheading">Novotel Sukhumvit 20 â€“ Bangkok, Thailand</small>
        <div class="app-hero__heading display-1">October 6-7, 2023</div>

        <section class="speaker-lineup">
          <h2 class="speaker-lineup__heading">Featured Keynote Speakers</h2>
          <div class="list-speaker">
            <div class="list-speaker__individual">
              <div class="list-speaker__name">Yukihiro "Matz" Matsumoto</div>
              <img class="list-speaker__photo" src="/images/speakers/matz.jpg" alt="Matz" />
            </div>
            <div class="list-speaker__individual">
              <div class="list-speaker__name">Bernard Banta</div>
              <img class="list-speaker__photo" src="/images/speakers/banta.jpg" alt="Bernard Banta" />
            </div>
          </div>
        </section>

        <div class="app-hero__mailing-list">
          <p class="app-hero__text">Sign up to receive updates about the speakers, venue, and ticket sales</p>
          {% render "form_mailing_list" %}
        </div>
      </div>
    </div>

    <main class="app-content">
      <div class="container">
        {{ content }}
      </div>
    </main>

    {% render "footer", metadata: site.metadata, social_platforms: site.data.social_platforms %}
  </body>
</html>
